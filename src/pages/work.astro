---
import ImageCard from "../components/ImageCard.astro";
import Layout from "../layouts/Layout.astro";
const images = await Astro.glob("../Images/*").then((files) => {
  return files.map((file) => file.default);
});

function shuffleArray(array) {
  for (let i = array.length - 1; i > 0; i--) {
    const j = Math.floor(Math.random() * (i + 1));
    [array[i], array[j]] = [array[j], array[i]];
  }
  return array;
}

// Shuffle the images array
const shuffledImages = shuffleArray(images);

// Split the shuffled array into three parts
const column1 = shuffledImages.slice(0, Math.ceil(shuffledImages.length / 3));
const column2 = shuffledImages.slice(Math.ceil(shuffledImages.length / 3), Math.ceil((2 * shuffledImages.length) / 3));
const column3 = shuffledImages.slice(Math.ceil((2 * shuffledImages.length) / 3));

---



<Layout title="Work - Ruban Roy">
<div class="galleryContainer">
  <ImageCard imagesGallery={column1} />
  <ImageCard imagesGallery={column2} />
  <ImageCard imagesGallery={column3} />
</div>
</Layout>
