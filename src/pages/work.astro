---
import Layout from "../layouts/Layout.astro";
const images = await Astro.glob("../Images/*").then((files) => {
  return files.map((file) => file.default);
});
---

<Layout title="Welcome to Astro.">
<div class="galleryContainer">
  <div>
    {
      images.slice(0, 15).map(({ src }) => (
        <div class="card">
          <div class="content">
            <img src={src} alt="" loading="lazy" />
          </div>
        </div>
      ))
    }
  </div>
  <div>
    {
      images.slice(15, 30).map(({ src }) => (
        <div class="card">
          <div class="content">
            <img src={src} alt="" loading="lazy" />
          </div>
        </div>
      ))
    }
  </div>
  <div>
    {
      images.slice(30, 43).map(({ src }) => (
        <div class="card">
          <div class="content">
            <img src={src} alt="" loading="lazy" />
          </div>
        </div>
      ))
    }
  </div>
</div>
</Layout>
<style>
  .galleryContainer {
    display: flex;
    flex-wrap: nowrap !important;
    gap: 15px;
    padding: 20px;
    align-items: flex-start;
    box-sizing: border-box;
    justify-content: center;
    clear: both;
    text-align: center;
    margin-top: 10px !important;
  }

  .galleryContainer > div {
    max-width: min-content !important;
    min-width: 369px;
    display: inline-flex;
    flex-direction: column;
    align-items: center;
    gap: inherit;
  }

  .card {
    max-height: 90vh;
    border: none;
    border-radius: 5px;
    position: relative;
    display: inline-block;
    vertical-align: top;
    box-shadow: none;
    background-color: #fff;
    overflow: hidden;
    max-width: 100%;
  }

  .content {
    border-radius: 5px;
    position: relative;
    overflow: hidden;
    margin: 0;
  }

  img {
    display: block;
    border: none;
    width: 100%;
  }
</style>
