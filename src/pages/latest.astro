---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Latest - Ruban Roy">
    <div class="videoContainer">
      <iframe
        class="video"
        src="https://www.youtube.com/embed/mZkJOhu9e_M?si=TOp3kHB5WcBegLSx"
        title="YouTube video player"
        allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share"
        allowfullscreen></iframe>
    </div>
    <div class="imageContainer">
      <a
        href="https://www.badinfluence.ca/collections/illusion"
        target="_blank"
      >
        <img src="/site1Img.png" />
      </a>
      <a href="https://blankclothing.ca/hooded-sweatshirts" target="_blank">
        <img src="/site2Img.png" />
      </a>
  </div>
</Layout>
<style>
  .video {
    aspect-ratio: 16 / 9;
    width: 80%;
  }

  .videoContainer,
  .imageContainer {
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .imageContainer {
    flex-direction: column;
    align-items: center;
    padding-right: 2.5%;
    padding-left: 2.5%;
    margin-left: auto;
    margin-right: auto;
    width: 80%;
  }

  .imageContainer img {
    max-width: 100%;
    margin-bottom: 39px;
  }
</style>
