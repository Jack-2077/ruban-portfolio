---
const { imagesGallery, firstImage } = Astro.props;
---

<div class="column">
  <img src={firstImage} alt="" />
  {imagesGallery.map(({ src }) => <img src={src} alt="" loading="lazy" />)}
</div>

<style>
  .column {
    flex: 33.33%;
    max-width: 33.33%;
    box-sizing: border-box;
    padding: 0 8px;
    border-radius: 5px;
  }

  .column img {
    margin-top: 8px;
    vertical-align: middle;
    width: 100%;
  }

  @media screen and (max-width: 800px) {
    .column {
      max-width: 50%;
    }
  }

  @media screen and (max-width: 600px) {
    .column {
      flex: 100%;
      max-width: 100%;
    }
  }
 </style>
