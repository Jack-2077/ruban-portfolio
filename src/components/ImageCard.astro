---
const { imagesGallery, firstImage } = Astro.props;
---

<div class="container">
  <div class="card">
    <div class="content">
      <img src={firstImage} alt=""  />
    </div>
  </div>
  {
    imagesGallery.map(({ src }) => (
      <div class="card">
        <div class="content">
          <img src={src} alt="" loading="lazy" />
        </div>
      </div>
    ))
  }
</div>
<style>
  .container {
    max-width: min-content !important;
    min-width: 369px;
    display: inline-flex;
    flex-direction: column;
    align-items: center;
    gap: inherit;
  }
  .card {
    max-height: 90vh;
    border: none;
    border-radius: 5px;
    position: relative;
    display: inline-block;
    vertical-align: top;
    box-shadow: none;
    background-color: #fff;
    overflow: hidden;
    max-width: 100%;
  }

  .content {
    border-radius: 5px;
    position: relative;
    overflow: hidden;
    margin: 0;
  }

  img {
    display: block;
    border: none;
    width: 100%;

    transition: transform;
    transition-duration: 1.2s;
    transition-delay: 0s;
    transition-timing-function: ease-out;
  }

  .content:hover img {
    transform: scale(1.5);
  }
</style>
